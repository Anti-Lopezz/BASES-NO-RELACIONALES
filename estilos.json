body {
    font-family: 'MedievalSharp', cursive;
    background-image: url('../img/Vintage-Old-Burnt-Paper-Graphic-51232561-1.png'); /* Imagen de fondo */
    background-size: cover;
    color: #fff;
    margin: 0;
}
header {
    background-color: rgba(139, 69, 19, 0.8);
    padding: 20px;
    text-align: center;
    border-bottom: 5px solid #FFD700;
}

#contenido header {
    background-color: rgba(139, 69, 19, 0.8);
    padding: 20px;
    text-align: center;
    border-bottom: 5px solid #FFD700;
}

nav a {
    margin: 10px;
    color: #FFD700;
    text-decoration: none;
    font-size: 1.2em;
}
main {
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 10px;
    text-align: center;
}
section {
    margin: 20px 0;
}
.cuadro {
    background-color: rgba(163, 106, 20, 0.678); /* Color m√°s claro que combina */
    padding: 20px;
    border: 2px solid #FFD700;
    border-radius: 10px;
    margin: 10px;
    display: inline-block;
    width: 200px;
    text-align: center;
    transition: all 0.3s ease;
}
.cuadro:hover {
    background-color: #ffd90093;;
    color: #000000;
    cursor: pointer;
}
footer {
    background-color: rgba(139, 69, 19, 0.8);
    padding: 10px;
    text-align: center;
    border-top: 5px solid #FFD700;
}
h1, h2 {
    color: #FFD700;
}

#contenido h1, h2, h3 {
    color: #FFD700;
}
#contenido ul {
    margin: 10px 0; padding: 0 20px;
}

#contenido p, li {font-size: 1.1em;
}

.cuadro-container {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
}
.cuadro {
    flex: 1 1 30%;
    border: 1px solid #ccc;
    padding: 16px;
    box-sizing: border-box;
    text-align: center;
    height: 150px; /* Altura fija para uniformidad */
}